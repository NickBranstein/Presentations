{
    <script>
        $(function() {
            var spinner = new Spinner();
            $('button').click(function() {
                spinner.spin(this);
            });
        });
        @*function refreshDashboard() {
            setTimeout(function () {
                $.get('@Url.Action("GetDashboard", "Home")', function (data) {
                    $('#dashboard').html(data);
                }).always(function() {
                    refreshDashboard();
                });
            }, 10000);
        }
